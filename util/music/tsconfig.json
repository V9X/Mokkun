{
  "compilerOptions": {
    "target": "ES2017",                   
    "module": "commonjs",
    "types": ["node"],    
    "typeRoots": ["node_modules/@types"],          
    "declaration": true,                  
    "declarationMap": true,               
    "outDir": "./out",                    
    "strict": true,
    "moduleResolution": "node",                                 
    "rootDirs": ["./lib"],                  
    "esModuleInterop": true,                         
    "inlineSourceMap": true,               
    "inlineSources": true,                 
    "forceConsistentCasingInFileNames": true
  }
}
